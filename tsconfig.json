{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "./built",
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "jsx": "react",
        "lib": ["dom", "dom.iterable", "esnext"],
        "resolveJsonModule": true,
        "noEmit": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.js",
        "src/types/*.d.ts"
    ],
    "exclude": ["node_modules", ".idea"]
}
